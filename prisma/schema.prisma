// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fieldReference"]
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

// User: email, password
// Book: title, author, year of publication, genres, rating
model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  userChanges BookChanges[] @relation("userChanges")
}

model Book {
  id                Int     @id @default(autoincrement())
  title             String  @unique
  author            String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  changes BookChanges[] @relation("bookChanges")
}

model BookChanges {
  id                Int        @id @default(autoincrement())
  status            BookStatus @default(NEW)
  yearOfPublication Int
  genres            Genre[] @relation("bookGenres")
  rating            Int
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  createdBy         User       @relation("userChanges", fields: [createdById], references: [id])
  createdById       Int

  book   Book @relation("bookChanges", fields: [bookId], references: [id])
  bookId Int
}

model Genre {
  id            Int    @id @default(autoincrement())
  name          Genres
  bookChange    BookChanges   @relation("bookGenres", fields: [bookChangeId], references: [id])
  bookChangeId  Int
}

enum Genres {
  FANTASY
  SCIENCE_FICTION
  HORROR
  ROMANCE
  THRILLER
  MYSTERY
  WESTERN
  DYSTOPIA
  MEMOIR
  BIOGRAPHY
  PLAY
  POETRY
  HISTORY
  TRAVEL
  CHILDRENS
  YOUNG_ADULT
  OTHER
}

enum BookStatus {
  NEW
  EDITED
  DELETED
}
